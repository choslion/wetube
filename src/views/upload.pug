    span = errorMessage
  form(action="" method="POST") 
    input(placeholder="Title" , required , maxlength=40, type ="text" , name="title")
    input(placeholder="Description" , required , maxlength=100, type ="text" , name="description")
    input(placeholder="Hashtags, separated by comma." , required , type ="text" , name="hashtags")
    input(type="submit" , value="Upload Video")